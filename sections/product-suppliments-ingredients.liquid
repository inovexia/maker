{% if product.metafields.ingredient.section %}
<section class="organic-ingredients">
  <div class="small-container">
    <h2>{{ product.metafields.ingredient.section_above_title }}</h2>
    <div class="row organic-ingredients-row">
      <div class="col-3">
        <div class="organic-img">
          <img
            src="{{
              product.metafields.ingredient.section_col1_image
                | img_url: 'master'
            }}"
            alt="organic 1"
          />
        </div>
        <h3>{{ product.metafields.ingredient.section_col1_text_1 }}</h3>
        <p>{{ product.metafields.ingredient.section_col1_text_2 }}</p>
      </div>
      <div class="col-3">
        <div class="organic-img">
          <img
            src="{{
              product.metafields.ingredient.section_col2_image
                | img_url: 'master'
            }}"
            alt="organic 2"
          />
        </div>
        <h3>{{ product.metafields.ingredient.section_col2_text_1 }}</h3>
        <p>{{ product.metafields.ingredient.section_col2_text_2 }}</p>
      </div>
      <div class="col-3">
        <div class="organic-img">
          <img
            src="{{
              product.metafields.ingredient.section_col3_image
                | img_url: 'master'
            }}"
            alt="organic 3"
          />
        </div>
        <h3>{{ product.metafields.ingredient.section_col3_text_1 }}</h3>
        <p>{{ product.metafields.ingredient.section_col3_text_2 }}</p>
      </div>
    </div>
  </div>
  <div class="container-fluid full-transp-container">
    <div class="row">
      <div class="col-4 real-ingredient-text">
        <h3>{{ product.metafields.ingredient.section_below_left_title }}</h3>
        <p>
          {{ product.metafields.ingredient.section_below_left_description }}
        </p>
        <a id="learn-more" href="#">LEARN MORE</a>
      </div>
      <div class="col-8 real-ingredient-img">
        <div class="row">
          <div class="col-7">
            <div class="ingredient-box-one">
              {{ product.metafields.ingredient.section_below_right_box1 }}
            </div>
          </div>
          <div class="col-5">
            <div class="ingredient-box">
              {{ product.metafields.ingredient.section_below_right_box2 }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  var learnMore = document.getElementById('learn-more');
  learnMore.onclick = function (e) {
    e.preventDefault();
    sizeBtn.style.display = 'block';
  };
</script>
{% endif %}
