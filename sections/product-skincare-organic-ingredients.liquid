<section class="organic-ingredients">
  <div class="small-container">
     <h2>{{ section.settings.center_organic_ingredient_title }}</h2>
     <div class="row organic-ingredients-row">   
        <div class="col-3">
           <div class="organic-img">
              <img src="{{ section.settings.left_image | img_url: 'master' }}" alt="organic 1">
           </div>
           <h3>{{ section.settings.center_organic_ingredient_title1 }}</h3>
           <p>{{ section.settings.center_organic_ingredient_desc1 }}</p>
        </div>
        <div class="col-3">
           <div class="organic-img">
              <img src="{{ section.settings.center_image | img_url: 'master' }}" alt="organic 2">
           </div>
           <h3>{{ section.settings.center_organic_ingredient_title2 }}</h3>
           <p>{{ section.settings.center_organic_ingredient_desc2 }}</p>
        </div>
        <div class="col-3">
           <div class="organic-img">
              <img src="{{ section.settings.right_image | img_url: 'master' }}" alt="organic 3">
           </div>
           <h3>{{ section.settings.center_organic_ingredient_title3 }}</h3>
           <p>{{ section.settings.center_organic_ingredient_desc3 }}</p>
        </div>
     </div>
  </div>
  <div class="container-fluid full-transp-container">
     <div class="row">  
        <div class="col-4 real-ingredient-text">
           <h3>{{ section.settings.center_real_ingredient_title }}</h3>
           <p>{{ section.settings.center_real_ingredient_description }}</p>
           <a href="#">{{ section.settings.center_real_ingredient_button }}</a>
        </div>
        <div class="col-8 real-ingredient-img">
           <img src="{{ section.settings.right_banner_image | img_url: 'master' }}" alt="organic 1">
        </div>
     </div>
  </div>

</section>
<script>
  $(document).ready(function(){
  
  $('.close-size-modal').click(function(){
    $('.size-modal').fadeOut();
  });
});
</script>
